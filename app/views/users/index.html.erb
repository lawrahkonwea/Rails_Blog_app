<div class="container">
<h1 class="heading">RailsBlog</h1>
<% @users.each do |user|%>
<a href="/users/<%= user.id%>">
  <div class="users-list">
    <img src="<%= user.photo %>" alt="User" />
    <div class="description">
      <h2> <%= user.name %></h2>
      <h4>Number of posts: <%= user.posts.count %></h4>
    </div>
  </div>
  </a>
<%end%>
</div>
